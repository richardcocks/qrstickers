@page
@model QRStickers.Pages.Meraki.OrganizationsModel
@{
    ViewData["Title"] = "Meraki Organizations";
}

<h1>Your Meraki Organizations</h1>

@if (!Model.UserConnections.Any())
{
    <div class="alert alert-warning">
        <p>You haven't connected any Meraki accounts yet.</p>
        <p><a href="/Connections/Create" class="btn btn-primary">Add Meraki Connection</a></p>
    </div>
}
else
{
    @if (Model.UserConnections.Count > 1)
    {
        <div style="margin-bottom: 20px; padding: 15px; background-color: #f5f5f5; border-radius: 4px;">
            <label for="connectionSelector" style="font-weight: bold; margin-right: 10px;">Select Connection:</label>
            <select id="connectionSelector" onchange="window.location.href='/Meraki/Organizations?connectionId=' + this.value"
                    style="padding: 5px 10px; border: 1px solid #ddd; border-radius: 4px;">
                @foreach (var conn in Model.UserConnections)
                {
                    <option value="@conn.Id" selected="@(conn.Id == Model.SelectedConnection?.Id)">
                        @conn.DisplayName @(conn.IsActive ? "" : " (Inactive)")
                    </option>
                }
            </select>
        </div>
    }
    else if (Model.SelectedConnection != null)
    {
        <p style="color: #666; margin-bottom: 15px;">
            <strong>Connection:</strong> @Model.SelectedConnection.DisplayName
        </p>
    }

    @if (Model.LastSyncedAt.HasValue)
    {
        <p style="color: #666; font-size: 0.9em;">
            <em>Last synced: @Model.LastSyncedAt.Value.ToString("g")</em>
        </p>
    }

    @if (Model.Organizations == null || !Model.Organizations.Any())
    {
        <p>No organizations found for this connection.</p>
        @if (Model.SelectedConnection != null)
        {
            <p><a href="/Meraki/SyncStatus?connectionId=@Model.SelectedConnection.Id">Sync Data</a></p>
        }
    }
    else
    {
        <table style="width: 100%; border-collapse: collapse;">
            <thead>
                <tr style="background-color: #f5f5f5; border-bottom: 2px solid #ddd;">
                    <th style="padding: 10px; text-align: center;">Dashboard</th>
                    <th style="padding: 10px; text-align: left;">Organization ID</th>
                    <th style="padding: 10px; text-align: left;">Organization Name</th>
                    <th style="padding: 10px; text-align: right;">Network Count</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var org in Model.Organizations)
                {
                    <tr style="border-bottom: 1px solid #ddd;">
                        <td style="padding: 10px; text-align: center; vertical-align: middle;">
                            @if (!string.IsNullOrEmpty(org.Url))
                            {
                                <a href="@org.Url" target="_blank" rel="noopener noreferrer" style="text-decoration: none;">
                                    <img src="/qrcode?q=@Uri.EscapeDataString(org.Url)" alt="QR Code for @org.Name - Dashboard Link" style="width: 100px; height: 100px; border: 1px solid #ddd; border-radius: 4px; padding: 4px; background-color: #fff;" />
                                </a>
                            }
                            else
                            {
                                <span style="color: #999; font-size: 0.9em;">N/A</span>
                            }
                        </td>
                        <td style="padding: 10px; font-family: monospace; font-size: 0.9em;">@org.OrganizationId</td>
                        <td style="padding: 10px;">
                            <a href="/Meraki/Networks?connectionId=@Model.SelectedConnection!.Id&orgId=@org.OrganizationId" style="text-decoration: none; color: inherit;">
                                <strong>@org.Name</strong>
                            </a>
                        </td>
                        <td style="padding: 10px; text-align: right;">
                            @if (Model.NetworkCounts.ContainsKey(org.OrganizationId))
                            {
                                @Model.NetworkCounts[org.OrganizationId]
                            }
                            else
                            {
                                <span>0</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}

<hr />
<p><a href="/">Back to home</a> | <a href="/Connections">Manage Connections</a></p>

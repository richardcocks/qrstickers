@page
@model QRStickers.Pages.Identity.Account.Manage.IndexModel
@{
    ViewData["Title"] = "Account Settings";
}

<h1>@ViewData["Title"]</h1>

@if (!string.IsNullOrEmpty(Model.StatusMessage))
{
    <div class="alert alert-success">
        @Model.StatusMessage
    </div>
}

<div class="row">
    <div class="col-md-6">
        <h3>Profile</h3>
        <hr />

        <form method="post" asp-page-handler="UpdateProfile">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label>Email</label>
                <input type="text" value="@Model.Email" class="form-control" disabled />
                <small class="form-text text-muted">Your email cannot be changed.</small>
            </div>

            <div class="form-group">
                <label asp-for="Input.DisplayName">Display Name</label>
                <input asp-for="Input.DisplayName" class="form-control" placeholder="Optional - defaults to your email" />
                <span asp-validation-for="Input.DisplayName" class="text-danger"></span>
                <small class="form-text text-muted">This is how we'll greet you throughout the app.</small>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
        </form>
    </div>

    <div class="col-md-6">
        <h3>Login Activity</h3>
        <hr />

        <div class="form-group">
            <label>Current Session Started</label>
            <div class="form-control" style="background-color: #f5f5f5;">
                @if (Model.CurrentSessionStartedAt.HasValue)
                {
                    @Model.CurrentSessionStartedAt.Value.ToLocalTime().ToString("MMM dd, yyyy 'at' h:mm tt")
                }
                else
                {
                    <span>No data available</span>
                }
            </div>
        </div>

        <div class="form-group">
            <label>Previous Login</label>
            <div class="form-control" style="background-color: #f5f5f5;">
                @if (Model.PreviousLoginAt.HasValue)
                {
                    @Model.PreviousLoginAt.Value.ToLocalTime().ToString("MMM dd, yyyy 'at' h:mm tt")
                }
                else
                {
                    <span>No previous login recorded</span>
                }
            </div>
            <small class="form-text text-muted">Check this to ensure your account hasn't been accessed without your knowledge.</small>
        </div>

        <h3 style="margin-top: 30px;">Security</h3>
        <hr />

        <form method="post" asp-page-handler="RevokeOtherSessions" onsubmit="return confirm('This will log out all other devices. You will remain logged in on this device. Continue?');">
            <p>If you've logged in on other devices or browsers, you can revoke those sessions here for security.</p>
            <button type="submit" class="btn btn-secondary">Revoke All Other Sessions</button>
        </form>
    </div>
</div>

<!-- Stage 1: Initial Delete Button -->
<div id="deleteAccountInitial" style="margin-top: 40px;">
    <button type="button" onclick="showDangerZone()" class="btn btn-danger">Delete Account</button>
</div>

<!-- Stage 2: Danger Zone Panel (initially hidden) -->
<div id="dangerZonePanel" style="display: none; margin-top: 40px; border: 2px solid #c62828; border-radius: 4px; padding: 20px; background-color: #ffebee;">
    <h3 style="color: #c62828; margin-top: 0;">⚠️ Danger Zone</h3>
    <hr style="border-color: #c62828;" />

    <div class="alert alert-danger" style="background-color: #ffcdd2; border: 1px solid #c62828; padding: 15px; border-radius: 4px; margin-bottom: 20px;">
        <strong>Warning:</strong> Deleting your account is permanent and cannot be undone. All your data, including connected accounts, templates and uploaded images will be permanently deleted.
    </div>

    <form method="post" asp-page-handler="DeleteAccount" id="deleteAccountForm">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Input.DeletePassword">Confirm your password to delete account</label>
            <input asp-for="Input.DeletePassword" class="form-control" maxlength="100" placeholder="Enter your password" id="deletePasswordInput" />
            <span asp-validation-for="Input.DeletePassword" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-danger">Confirm Delete</button>
            <button type="button" onclick="hideDangerZone()" class="btn btn-secondary" style="margin-left: 10px;">Cancel</button>
        </div>
    </form>
</div>

<style>
    .form-group {
        margin-bottom: 15px;
    }
    .form-control {
        width: 100%;
        padding: 8px;
        border: 1px solid #ddd;
        border-radius: 4px;
    }
    .form-control:disabled {
        background-color: #f5f5f5;
        cursor: not-allowed;
    }
    .text-danger {
        color: #c62828;
    }
    .text-muted {
        color: #666;
        font-size: 0.9em;
    }
    .col-md-6 {
        width: 48%;
        display: inline-block;
        vertical-align: top;
        margin-right: 2%;
    }
    .btn-danger {
        background-color: #c62828;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 4px;
        cursor: pointer;
        font-weight: bold;
    }
    .btn-danger:hover {
        background-color: #b71c1c;
    }
    .alert-danger {
        color: #c62828;
    }
    #dangerZonePanel {
        animation: fadeIn 0.3s ease-in;
    }
    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" optional="true" />
    <script>
        function showDangerZone() {
            document.getElementById('deleteAccountInitial').style.display = 'none';
            document.getElementById('dangerZonePanel').style.display = 'block';
        }

        function hideDangerZone() {
            document.getElementById('dangerZonePanel').style.display = 'none';
            document.getElementById('deleteAccountInitial').style.display = 'block';
            // Clear password field when canceling
            document.getElementById('deletePasswordInput').value = '';
        }
    </script>
}

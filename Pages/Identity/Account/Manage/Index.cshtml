@page
@model QRStickers.Pages.Identity.Account.Manage.IndexModel
@{
    ViewData["Title"] = "Account Settings";
}

<h1>@ViewData["Title"]</h1>

@if (!string.IsNullOrEmpty(Model.StatusMessage))
{
    <div class="alert alert-success">
        @Model.StatusMessage
    </div>
}

<div class="row">
    <div class="col-md-6">
        <h3>Profile</h3>
        <hr />

        <form method="post" asp-page-handler="UpdateProfile">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label>Email</label>
                <input type="text" value="@Model.Email" class="form-control" disabled />
                <small class="form-text text-muted">Your email cannot be changed.</small>
            </div>

            <div class="form-group">
                <label asp-for="Input.DisplayName">Display Name</label>
                <input asp-for="Input.DisplayName" class="form-control" placeholder="Optional - defaults to your email" />
                <span asp-validation-for="Input.DisplayName" class="text-danger"></span>
                <small class="form-text text-muted">This is how we'll greet you throughout the app.</small>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
        </form>
    </div>

    <div class="col-md-6">
        <h3>Login Activity</h3>
        <hr />

        <div class="form-group">
            <label>Current Session Started</label>
            <div class="form-control" style="background-color: #f5f5f5;">
                @if (Model.CurrentSessionStartedAt.HasValue)
                {
                    @Model.CurrentSessionStartedAt.Value.ToLocalTime().ToString("MMM dd, yyyy 'at' h:mm tt")
                }
                else
                {
                    <span>No data available</span>
                }
            </div>
        </div>

        <div class="form-group">
            <label>Previous Login</label>
            <div class="form-control" style="background-color: #f5f5f5;">
                @if (Model.PreviousLoginAt.HasValue)
                {
                    @Model.PreviousLoginAt.Value.ToLocalTime().ToString("MMM dd, yyyy 'at' h:mm tt")
                }
                else
                {
                    <span>No previous login recorded</span>
                }
            </div>
            <small class="form-text text-muted">Check this to ensure your account hasn't been accessed without your knowledge.</small>
        </div>

        <h3 style="margin-top: 30px;">Security</h3>
        <hr />

        <form method="post" asp-page-handler="RevokeOtherSessions" onsubmit="return confirm('This will log out all other devices. You will remain logged in on this device. Continue?');">
            <p>If you've logged in on other devices or browsers, you can revoke those sessions here for security.</p>
            <button type="submit" class="btn btn-secondary">Revoke All Other Sessions</button>
        </form>
    </div>
</div>

<style>
    .form-group {
        margin-bottom: 15px;
    }
    .form-control {
        width: 100%;
        padding: 8px;
        border: 1px solid #ddd;
        border-radius: 4px;
    }
    .form-control:disabled {
        background-color: #f5f5f5;
        cursor: not-allowed;
    }
    .text-danger {
        color: #c62828;
    }
    .text-muted {
        color: #666;
        font-size: 0.9em;
    }
    .col-md-6 {
        width: 48%;
        display: inline-block;
        vertical-align: top;
        margin-right: 2%;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" optional="true" />
}

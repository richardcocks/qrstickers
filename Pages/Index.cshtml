@page
@model QRStickers.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
}


@if (User.Identity?.IsAuthenticated == true)
{
    <h1>Welcome to QR Stickers</h1>

    <h2>Hello @Model.DisplayName!</h2>

    <h3>Your Connections</h3>

    @if (Model.ConnectionCount == 0)
    {
        <div class="alert alert-info">
            <p>You haven't connected any accounts yet.</p>
            <p><a href="/Connections/Create" class="btn btn-primary">Add Your First Connection</a></p>
        </div>
    }
    else
    {
        <p>You have <strong>@Model.ConnectionCount</strong> connection@(Model.ConnectionCount == 1 ? "" : "s").</p>

        <ul style="list-style: none; padding: 0;">
            @foreach (var connection in Model.Connections)
            {
                <li style="padding: 10px; margin-bottom: 10px; border: 1px solid #ddd; border-radius: 4px; background-color: #f9f9f9;">
                    <div style="display: flex; justify-content: space-between; align-items: center;">
                        <div>
                            <strong>@connection.DisplayName</strong>
                            <span style="color: #666; margin-left: 10px;">(@connection.ConnectionType)</span>
                            @if (connection.IsActive)
                            {
                                <span style="color: #28a745; margin-left: 10px; font-size: 0.9em;">‚óè Active</span>
                            }
                        </div>
                        <div>
                            @if (connection.ConnectionType == "Meraki")
                            {
                                <a href="/Meraki/Connection?connectionId=@connection.Id" style="margin-right: 10px;">View Connection</a>
                            }
                        </div>
                    </div>
                </li>
            }
        </ul>

        <p>
            <a href="/Connections" class="btn btn-secondary">Manage Connections</a>
            <a href="/Connections/Create" class="btn btn-primary" style="margin-left: 10px;">Add New Connection</a>
        </p>
    }
}
else
{
    <!-- Landing Page Styles -->
    <style>
        /* Hide navbar and compact footer for landing page */
        .navbar {
            display: none;
        }

        .footer {
            padding: 10px 20px;
            margin-top: 0;
            font-size: 0.9em;
        }

        .footer-content {
            gap: 10px;
        }

        .footer-version {
            font-size: 0.85em;
        }

        .footer-environment {
            padding: 2px 6px;
            font-size: 0.8em;
        }

        .landing-page {
            margin: -20px;
            padding: 0;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        }

        /* Hero Section */
        .hero-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
            color: white;
            padding: 80px 20px;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: radial-gradient(circle at 30% 50%, rgba(255,255,255,0.1) 0%, transparent 60%);
            pointer-events: none;
        }

        .hero-content {
            max-width: 900px;
            margin: 0 auto;
            position: relative;
            z-index: 1;
        }

        .hero-section h1 {
            font-size: 3em;
            font-weight: 800;
            margin-bottom: 20px;
            line-height: 1.2;
            text-shadow: 0 2px 20px rgba(0,0,0,0.2);
        }

        .hero-section p {
            font-size: 1.3em;
            margin-bottom: 40px;
            opacity: 0.95;
            line-height: 1.6;
        }

        .cta-buttons {
            display: flex;
            gap: 20px;
            justify-content: center;
            flex-wrap: wrap;
        }

        .btn-cta {
            padding: 16px 40px;
            font-size: 1.1em;
            font-weight: 600;
            border-radius: 50px;
            text-decoration: none;
            transition: all 0.3s ease;
            display: inline-block;
        }

        .btn-cta-primary {
            background: white;
            color: #667eea;
            box-shadow: 0 4px 20px rgba(0,0,0,0.2);
        }

        .btn-cta-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 30px rgba(0,0,0,0.3);
        }

        .btn-cta-secondary {
            background: rgba(255,255,255,0.2);
            color: white;
            border: 2px solid white;
        }

        .btn-cta-secondary:hover {
            background: rgba(255,255,255,0.3);
            transform: translateY(-2px);
        }

        /* Features Section */
        .features-section {
            padding: 80px 20px;
            background: #f8f9fa;
        }

        .section-title {
            text-align: center;
            font-size: 2.5em;
            font-weight: 700;
            margin-bottom: 20px;
            color: #2d3748;
        }

        .section-subtitle {
            text-align: center;
            font-size: 1.2em;
            color: #718096;
            margin-bottom: 60px;
            max-width: 700px;
            margin-left: auto;
            margin-right: auto;
        }

        .features-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 40px;
            max-width: 1200px;
            margin: 0 auto;
        }

        .feature-card {
            background: white;
            padding: 40px;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.08);
            transition: all 0.3s ease;
            text-align: center;
        }

        .feature-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 40px rgba(0,0,0,0.12);
        }

        .feature-icon {
            font-size: 3em;
            margin-bottom: 20px;
            display: block;
        }

        .feature-card h3 {
            font-size: 1.5em;
            font-weight: 700;
            margin-bottom: 15px;
            color: #2d3748;
        }

        .feature-card p {
            color: #718096;
            line-height: 1.7;
            font-size: 1.05em;
        }

        /* How It Works Section */
        .how-it-works-section {
            padding: 80px 20px;
            background: white;
        }

        .steps-container {
            max-width: 1000px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 30px;
        }

        .step {
            text-align: center;
            position: relative;
        }

        .step-number {
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.8em;
            font-weight: 700;
            margin: 0 auto 20px;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
        }

        .step h3 {
            font-size: 1.3em;
            font-weight: 700;
            margin-bottom: 10px;
            color: #2d3748;
        }

        .step p {
            color: #718096;
            line-height: 1.6;
        }

        /* Demo Section */
        .demo-section {
            padding: 80px 20px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

        .demo-content {
            max-width: 900px;
            margin: 0 auto;
            text-align: center;
        }

        .demo-section h2 {
            font-size: 2.5em;
            font-weight: 700;
            margin-bottom: 20px;
        }

        .demo-section p {
            font-size: 1.2em;
            margin-bottom: 30px;
            opacity: 0.95;
        }

        .demo-placeholder {
            background: rgba(255,255,255,0.1);
            border: 3px dashed rgba(255,255,255,0.3);
            border-radius: 16px;
            padding: 80px 40px;
            margin: 40px 0;
            backdrop-filter: blur(10px);
        }

        .demo-placeholder p {
            font-size: 1.1em;
            opacity: 0.8;
            margin: 0;
        }

        .demo-features {
            display: flex;
            gap: 30px;
            justify-content: center;
            flex-wrap: wrap;
            margin-top: 40px;
        }

        .demo-feature {
            background: rgba(255,255,255,0.15);
            padding: 20px 30px;
            border-radius: 12px;
            backdrop-filter: blur(10px);
        }

        /* Final CTA Section */
        .final-cta-section {
            padding: 80px 20px;
            background: #f8f9fa;
            text-align: center;
        }

        .final-cta-section h2 {
            font-size: 2.5em;
            font-weight: 700;
            margin-bottom: 20px;
            color: #2d3748;
        }

        .final-cta-section p {
            font-size: 1.3em;
            color: #718096;
            margin-bottom: 40px;
            max-width: 700px;
            margin-left: auto;
            margin-right: auto;
        }

        .signin-link {
            margin-top: 30px;
            color: #718096;
            font-size: 1.1em;
        }

        .signin-link a {
            color: #667eea;
            font-weight: 600;
            text-decoration: none;
        }

        .signin-link a:hover {
            text-decoration: underline;
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .hero-section h1 {
                font-size: 2em;
            }

            .hero-section p {
                font-size: 1.1em;
            }

            .section-title {
                font-size: 2em;
            }

            .btn-cta {
                padding: 14px 30px;
                font-size: 1em;
            }

            .features-grid {
                grid-template-columns: 1fr;
            }

            .steps-container {
                grid-template-columns: 1fr;
            }
        }
    </style>

    <div class="landing-page">
        <!-- Hero Section -->
        <section class="hero-section">
            <div class="hero-content">
                <h1>Design Professional QR Code Stickers for Your Network Devices</h1>
                <p>Connect your Meraki account, create custom templates with our drag-and-drop designer, and export beautiful QR code labels in bulk.</p>
                <div class="cta-buttons">
                    <a href="/Identity/Account/Register" class="btn-cta btn-cta-primary">Get Started Free</a>
                    <a href="/Identity/Account/Login" class="btn-cta btn-cta-secondary">Sign In</a>
                </div>
            </div>
        </section>

        <!-- Features Section -->
        <section class="features-section">
            <h2 class="section-title">Powerful Features for Network Professionals</h2>
            <p class="section-subtitle">Everything you need to create, customize, and export professional device labels</p>

            <div class="features-grid">
                <div class="feature-card">
                    <span class="feature-icon">üé®</span>
                    <h3>Visual Template Designer</h3>
                    <p>Drag-and-drop canvas editor with real-time preview. Bind dynamic data like device serial numbers, names, and custom variables to create perfect labels every time.</p>
                </div>

                <div class="feature-card">
                    <span class="feature-icon">üîê</span>
                    <h3>Secure OAuth Integration</h3>
                    <p>Connect your Cisco Meraki account securely with OAuth 2.0. Your credentials stay with Meraki‚Äîwe never see or store your password.</p>
                </div>

                <div class="feature-card">
                    <span class="feature-icon">üì¶</span>
                    <h3>Bulk Export Capabilities</h3>
                    <p>Export stickers for multiple devices at once with real-time progress tracking. Download as PNG, SVG, or PDF in various DPI settings for professional printing.</p>
                </div>
            </div>
        </section>

        <!-- How It Works Section -->
        <section class="how-it-works-section">
            <h2 class="section-title">How It Works</h2>
            <p class="section-subtitle">Get started in minutes with our simple four-step process</p>

            <div class="steps-container">
                <div class="step">
                    <div class="step-number">1</div>
                    <h3>Create Account</h3>
                    <p>Sign up with your email and create a secure account in seconds.</p>
                </div>

                <div class="step">
                    <div class="step-number">2</div>
                    <h3>Connect Meraki</h3>
                    <p>Link your Cisco Meraki account using secure OAuth authentication.</p>
                </div>

                <div class="step">
                    <div class="step-number">3</div>
                    <h3>Design Templates</h3>
                    <p>Use our visual designer to create custom sticker templates with QR codes.</p>
                </div>

                <div class="step">
                    <div class="step-number">4</div>
                    <h3>Export & Print</h3>
                    <p>Export your stickers in bulk and send them to your printer.</p>
                </div>
            </div>
        </section>

        <!-- Demo Section -->
        <section class="demo-section">
            <div class="demo-content">
                <h2>See It In Action</h2>
                <p>Our intuitive designer makes creating professional labels a breeze</p>

                <div class="demo-placeholder">
                    <p>üì∏ Designer Interface Preview</p>
                    <p style="font-size: 0.95em; margin-top: 15px;">Canvas-based editor with drag-and-drop elements, real-time data binding, and instant preview</p>
                </div>

                <div class="demo-features">
                    <div class="demo-feature">
                        <strong>‚úì Multi-Connection Support</strong>
                    </div>
                    <div class="demo-feature">
                        <strong>‚úì Custom Variables</strong>
                    </div>
                    <div class="demo-feature">
                        <strong>‚úì Template Matching</strong>
                    </div>
                    <div class="demo-feature">
                        <strong>‚úì Real-Time Sync</strong>
                    </div>
                </div>
            </div>
        </section>

        <!-- Final CTA Section -->
        <section class="final-cta-section">
            <h2>Ready to Get Started?</h2>
            <p>Join network professionals who are streamlining their device labeling workflow with QR Stickers.</p>
            <a href="/Identity/Account/Register" class="btn-cta btn-cta-primary">Create Your Free Account</a>
            <p class="signin-link">Already have an account? <a href="/Identity/Account/Login">Sign in here</a></p>
        </section>
    </div>
}

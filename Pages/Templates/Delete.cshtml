@page
@model QRStickers.Pages.Templates.DeleteModel
@{
    ViewData["Title"] = "Delete Template";
}

<style>
    .delete-container {
        max-width: 600px;
        margin: 40px auto;
    }

    .delete-card {
        background: white;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .delete-header {
        text-align: center;
        margin-bottom: 30px;
    }

    .delete-icon {
        font-size: 64px;
        color: #d32f2f;
        margin-bottom: 10px;
    }

    .delete-header h1 {
        margin: 0;
        color: #333;
        font-size: 1.8em;
    }

    .template-details {
        background: #f5f5f5;
        padding: 20px;
        border-radius: 6px;
        margin-bottom: 20px;
    }

    .template-details h2 {
        margin: 0 0 15px 0;
        font-size: 1.3em;
        color: #333;
    }

    .detail-row {
        display: flex;
        justify-content: space-between;
        padding: 8px 0;
        border-bottom: 1px solid #e0e0e0;
    }

    .detail-row:last-child {
        border-bottom: none;
    }

    .detail-label {
        font-weight: 600;
        color: #666;
    }

    .detail-value {
        color: #333;
    }

    .badge {
        display: inline-block;
        padding: 3px 8px;
        font-size: 11px;
        font-weight: 600;
        border-radius: 3px;
        text-transform: uppercase;
        margin-left: 5px;
    }


    .warning-box {
        background: #fff3e0;
        border-left: 4px solid #ff9800;
        padding: 15px;
        margin-bottom: 20px;
        border-radius: 4px;
    }

    .warning-box strong {
        display: block;
        margin-bottom: 5px;
        color: #e65100;
    }

    .confirmation-text {
        text-align: center;
        font-size: 1.1em;
        color: #666;
        margin-bottom: 30px;
    }

    .form-actions {
        display: flex;
        gap: 15px;
        justify-content: center;
    }

    .btn-danger {
        background: #d32f2f;
        color: white;
        padding: 12px 30px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
        font-weight: 600;
        transition: background 0.2s;
    }

    .btn-danger:hover {
        background: #c62828;
    }

    .btn-cancel {
        background: #757575;
        color: white;
        padding: 12px 30px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
        font-weight: 600;
        text-decoration: none;
        display: inline-block;
        transition: background 0.2s;
    }

    .btn-cancel:hover {
        background: #616161;
        color: white;
    }

    .replacement-section {
        background: #fff3e0;
        border-left: 4px solid #ff9800;
        padding: 20px;
        margin-bottom: 20px;
        border-radius: 4px;
    }

    .replacement-section h3 {
        margin: 0 0 10px 0;
        color: #e65100;
        font-size: 1.1em;
    }

    .usage-list {
        margin: 10px 0 15px 0;
        color: #666;
        font-size: 14px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-group label {
        display: block;
        font-weight: 600;
        margin-bottom: 8px;
        color: #333;
    }

    .form-group select {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 14px;
    }

    .form-group select:focus {
        outline: none;
        border-color: #ff9800;
    }

    .validation-error {
        color: #d32f2f;
        font-size: 13px;
        margin-top: 5px;
    }
</style>

<div class="delete-container">
    <div class="delete-card">
        <div class="delete-header">
            <div class="delete-icon">⚠️</div>
            <h1>Delete Template</h1>
        </div>

        <form method="post">
        @if (!string.IsNullOrEmpty(Model.WarningMessage))
        {
            <div class="warning-box">
                <strong>Warning!</strong>
                @Model.WarningMessage
            </div>
        }

        <div class="template-details">
            <h2>@Model.Template!.Name</h2>

            @if (!string.IsNullOrEmpty(Model.Template.Description))
            {
                <div class="detail-row">
                    <span class="detail-label">Description:</span>
                    <span class="detail-value">@Model.Template.Description</span>
                </div>
            }

            <div class="detail-row">
                <span class="detail-label">Dimensions:</span>
                <span class="detail-value">@(Model.Template.PageWidth)mm × @(Model.Template.PageHeight)mm</span>
            </div>

            @if (Model.Template.Connection != null)
            {
                <div class="detail-row">
                    <span class="detail-label">Connection:</span>
                    <span class="detail-value">@Model.Template.Connection.DisplayName</span>
                </div>
            }

            <div class="detail-row">
                <span class="detail-label">Created:</span>
                <span class="detail-value">@Model.Template.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</span>
            </div>

            <div class="detail-row">
                <span class="detail-label">Last Updated:</span>
                <span class="detail-value">@Model.Template.UpdatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</span>
            </div>
        </div>

        @if (Model.UsageInfo.Any())
        {
            <div class="replacement-section">
                <h3>⚠️ Template In Use</h3>
                <div class="usage-list">
                    This template is currently set as default for:
                    <strong>@string.Join(", ", Model.UsageInfo.Select(u => Model.GetDeviceTypeName(u.ProductType)))</strong>
                </div>
                <div class="form-group">
                    <label for="ReplacementTemplateId">Choose replacement template:</label>
                    <select asp-for="ReplacementTemplateId" id="ReplacementTemplateId" required>
                        @foreach (var template in Model.ReplacementOptions)
                        {
                            <option value="@template.Id">
                                @template.Name @(template.IsSystemTemplate ? "(System)" : "")
                            </option>
                        }
                    </select>
                    <span asp-validation-for="ReplacementTemplateId" class="validation-error"></span>
                </div>
                <p style="font-size: 13px; color: #666; margin: 0;">
                    The selected replacement will be applied to all affected defaults before deletion.
                </p>
            </div>
        }

        <div class="confirmation-text">
            <p><strong>Are you sure you want to delete this template?</strong></p>
            <p style="color: #999; font-size: 0.9em;">This action cannot be undone.</p>
        </div>

            <div class="form-actions">
                <a href="/Templates" class="btn-cancel">Cancel</a>
                <button type="submit" class="btn-danger">Delete Template</button>
            </div>
        </form>
    </div>
</div>

<partial name="_ValidationScriptsPartial" optional="true" />


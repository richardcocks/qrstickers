@page
@model QRStickers.Pages.Identity.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div style="text-align: center; margin-bottom: 30px;">
    <img src="~/images/logo.png" alt="QR Stickers" style="width: 200px; height: auto;" />
</div>

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <h2>Create a new account</h2>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email">Email</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password">Password</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>
            <div class="form-group">
                <p>
                    <a href="/Identity/Account/Login">Already have an account? Login</a>
                </p>
            </div>
        </form>
    </div>
</div>

<style>
    .form-group {
        margin-bottom: 15px;
    }
    .form-control {
        width: 100%;
        padding: 8px;
        border: 1px solid #ddd;
        border-radius: 4px;
    }
    .text-danger {
        color: #c62828;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" optional="true" />
}
